{
  "name": "discord-notification-action",
  "version": "0.1.2",
  "description": "GitHub Action for sending a Discord notification using webhooks",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/insprac/discord-notification-action.git"
  },
  "keywords": [
    "actions",
    "discord"
  ],
  "author": "insprac",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.28.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.3",
    "typescript": "^5.4.2"
  }
}
